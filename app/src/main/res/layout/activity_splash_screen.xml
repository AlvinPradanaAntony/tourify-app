<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_screen_motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:layoutDescription="@xml/activity_splash_screen_scene"
    tools:conxt=".SplashScreen">

    <View
        android:id="@+id/first_background"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/circle_abstract" />

    <ImageView
        android:id="@+id/abstract1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/abstract1"
        android:scaleType="matrix"
        android:src="@drawable/abstract1" />


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/logo_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:altSrc="@drawable/alt_logo_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo_app" />

    <TextView
        android:id="@+id/title_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/fo_gilroy_black"
        android:text="@string/title_logo"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fo_nunito_sans_light"
        android:text="@string/make_your_dream_trip_come_true"
        android:textColor="@color/white" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="163dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="248dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="273dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="435dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.motion.widget.MotionLayout>